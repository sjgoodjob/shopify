        }
		.blog_ul li i{
          display: flex !important;
          align-items: center;
        }
        .blog_ul li ul {
          display:none;
        }
		#menuToggle input:checked ~ ul
		{
		  transform: none;
		}
  }  
  .blog_nav{
    background-color: #d5455d;
    width: 85%;
    float: left;
  }
  .blog_logo{
    width: 15%;
    float: left;
    text-align: center;
    line-height: 65px;
    background-color: #d5455d;
  }
  .blog_logo img{
    width: 125px;
  }
  .blog_ul{
    line-height: 35px;
  }
  		nav ul {
		  -webkit-font-smoothing: antialiased;
		  list-style: none;
		  margin: 0;
		  padding: 0;
		  width: 100%;
		}
		nav li {
		  float: left;
		  margin: 0;
		  padding: 0;
