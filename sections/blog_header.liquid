{%- liquid
  assign se_blocks = section.blocks  -%}
<div class="blog_header">
    <div class="blog_logo"><a href="https://www.honeyplaybox.com"><img src="https://cdn.shopify.com/s/files/1/2471/7882/files/logo-01.png?v=1674962944"></a></div>
    <nav class="blog_nav">
      <div id="menuToggle">
        <input type="checkbox" />
        	<span></span>
		    <span></span>
		    <span></span>
{%- if se_blocks.size > 0 -%}
  {%- for block in se_blocks -%}
     {%- case block.type -%}
      {%- when 'category' -%}
    {%- assign blog_top_link_list = block.settings.blog_link_list -%}
    {%- assign blog_category_title_1 = block.settings.title_1 -%}
    {%- assign blog_category_title_2 = block.settings.title_2 -%}
    {%- assign blog_category_title_3 = block.settings.title_3 -%}
    {%- assign blog_category_title_4 = block.settings.title_4 -%}
    {%- assign blog_category_title_5 = block.settings.title_5 -%}
    {%- assign blog_category_title_6 = block.settings.title_6 -%}
    <ul class="blog_ul">
      {%- for link in linklists[blog_top_link_list].links -%}
        {%- if link.type != 'blog_link' %}{% continue %}{% endif -%}
        {%- if link.title == blog_category_title_1 %}{% continue %}{% endif -%}
        {%- if link.title == blog_category_title_2 %}{% continue %}{% endif -%}
        {%- if link.title == blog_category_title_3 %}{% continue %}{% endif -%}
        {%- if link.title == blog_category_title_4 %}{% continue %}{% endif -%}
        {%- if link.title == blog_category_title_5 %}{% continue %}{% endif -%}
        {%- if link.title == blog_category_title_6 %}{% continue %}{% endif -%}
      <li class="blog_li"><i class="las la-las la-chevron-circle-right mr__10 fs__20"></i><a href="{{ link.url }}">{{link.title}}</a>
        {%- if link.articles_count < 1 %}
      <ul class="blog_li_ul" style="display:none;">
          {% else %}
          <ul class="blog_li_ul">
           {% endif -%}
      {% for blog_ul in blogs[link.handle].articles limit: 3 %}
        {% assign article = articles[blog_ul.handle] %}
        <li class="blog_post"><a href="{{ article.url }}"><img src="{{ article.image | image_url: width: 300,height: 200 }}">{{ article.title }}</a></li>
      {% endfor %}
      </ul>
      {%- endfor -%}
      </li>
    </ul>
  </nav>
      <div class="blog_home_search">
        <div class="t4s-site-nav__icon t4s-site-nav__search"><a class="t4s-pr" href="/search" data-drawer-delay-="" data-drawer-options="{ &quot;id&quot;:&quot;#t4s-search-hidden&quot; }">
				<svg class="t4s-icon t4s-icon--search" aria-hidden="true" focusable="false" role="presentation"><use href="#icon-h-search"></use></svg>
			</a></div>
      </div>
      <div style="clear: both;"></div>
      {%- when 'bottom_category' -%}
       <div class="top_nav">
        <div class="top_nav_ul">
          <a href="/" class="top_na top_home top_color">Home</a>

        {%- assign blog_top_link_list = block.settings.blog_link_list -%}
        {%- assign blog_category_title_1 = block.settings.title_1 -%}
        {%- assign blog_category_title_2 = block.settings.title_2 -%}
        {%- assign blog_category_title_3 = block.settings.title_3 -%}
        {%- assign blog_category_title_4 = block.settings.title_4 -%}
        {%- assign blog_category_title_5 = block.settings.title_5 -%}
        {%- assign blog_category_title_6 = block.settings.title_6 -%}
        {%- for link in linklists[blog_top_link_list].links -%}
          {%- if link.type != 'blog_link' %}{% continue %}{% endif -%}
          <a href="{{ link.url }}" class="top_na">  {{link.title}}</a>
        {%- endfor -%}
    </div>  
    </div>
      {%- endcase -%}
      {%- endfor -%}
  {% endif -%}
</div>
<script>
  (function(){
  var screenWidth = screen.width;
if(screenWidth < 768){
  let pageHeight = document.body.scrollHeight || document.documentElement.scrollHeight; // 页面总高度
  let windowHeight = document.documentElement.clientHeight || document.body.clientHeight; // 浏览器视口高度
  var blog_header = document.querySelector('.blog_header'),
	  blogHeaderTop = blog_header.offsetTop;
  console.log('窗口的高度：', blogHeaderTop);
  window.onscroll = function () {
  let scrollTop = document.documentElement.scrollTop || document.body.scrollTop;  // 获取滚动条的高度
    //console.log('滚动条的高度：', scrollTop);
  if(scrollTop>=blogHeaderTop){
    blog_header.style.cssText = "position: fixed;top: 0px;z-index: 99;";
  }else{
    blog_header.style.cssText = "position: relative;";
  }
  }
  }
}());
</script>
